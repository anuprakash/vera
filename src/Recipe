libraries.vera {
	sources = \
		displays/DisplayInterface.vala \
		displays/XlibDisplay.vala \
		autostart/Application.vala \
		logindInterface.vala \
		PluginInterface.vala
	so-version = 0
	header-install-directory = $(options.include-directory)/vera
	compile-flags = -fPIC
	vala-compile-flags = --vapidir=./vapis

	vala-packages = gio-2.0 libpeas-1.0 gdk-3.0 gdk-x11-3.0 x11		
	packages = gee-1.0 libpeas-1.0 gdk-3.0 gdk-x11-3.0 x11

}

programs.vera {
	sources = \
		PluginManager.vala \
		settings/xsettings-manager.vala \
		screenshot/screenshot.vala \
		exit/ExitHandler.vala \
		exit/ExitDialog.vala \
		autostart/AutostartManager.vala \
		vera.vala
	libraries = vera (local)
	link-flags = -lX11
	
	vala-packages = gio-2.0 gee-1.0 libpeas-1.0 gtk+-3.0 gdk-x11-3.0 gdk-3.0 vera-xsettings
	packages = gee-1.0 gio-2.0 libpeas-1.0 gtk+-3.0 gdk-x11-3.0 gdk-3.0 vera-xsettings
}
